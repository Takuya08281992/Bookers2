<div class="container">
	<div class="row">
		<div class="col-xs-3">

			<h2>User info</h2>
			<div class="profile-container">
				<table class="table">
					<tbody>
						<tr>
							<th>
								<%= attachment_image_tag @user, :profile_image, :fill, 50, 50, format: 'jpeg', class: "pull-left profile-img", fallback: "no_image.jpg" %>
							</th>
						</tr>
						<tr>
							<th>name</th>
							<th><%= @user.name %></th>
						</tr>
						<tr>
							<th>introduction</th>
							<th><%= @user.introduction %></th>
						</tr>
					</tbody>
				</table>
				<p>
					<%= link_to "", edit_user_path(@user), class: "glyphicon glyphicon-wrench pull-left btn btn-default btn-block" %>
				</p>
			</div>
			<h2>New book</h2>
			<%= form_for(@book) do |f| %>
			<div class="field row">
				<%= f.label :title, "Title"%>
				<%= f.text_field :title, :class => 'col-xs-12 book_title' %>
			</div>
			<div class="field row">
				<%= f.label :body, "Opinion"%>
				<%= f.text_area :body, :class => 'col-xs-12 book_body' %>
			</div>
			<div class="actions row">
				<%= f.submit :class => 'btn btn-primary col-xs-12' %>
			</div>
			<% end %>
		</div>